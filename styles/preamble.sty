\newpairofpagestyles{mainmatter}{
    % /= Add chapter to header on the right ony for following pages =/
    \ohead{\textcolor{gray}{\MakeUppercase{\headmark}}}
    % % /= Watermarking added to footer in the center =/
    % \cfoot*{\watermarktext}
    % /= Add page and total page number to footer on the right for all pages =/
    \ofoot*{\textcolor{gray}{\pagemark~|~\pageref*{LastPage}}}
}