% /== New pagestyle for frontmatter pages ==/
\newpairofpagestyles{frontmatter}{
    % % /= Watermarking added to footer in the center =/
    % \cfoot*{\watermarktext}
    % /= Add page number to footer on the right for all pages =/
    \cfoot*{\normalsize\textcolor{gray}\pagemark}
}
